{% extends noLayout ? viewbaseLayout : "ADAppsoBundle::pagelayout.html.twig" %}

{% block content %}



<section class="content wrap cf">
    <article>
        <header>
            <h1>{{ content.contentInfo.name }}</h1>
            <a href="javascript:window.print();" class="print" title="Imprimer">Imprimer</a>
        </header>


        {{ ez_render_field(
        content,
        "description",
        {
        'editMode': true,
        'attr': { 'class': 'dynamic-content' }
        }
        )
        }}

    </article>

    <aside>
        {{ render( controller( "ADAppsoBundle:Appso:subMenu", { 'top': location.id, 'current': location.id } ) ) }}

        <a href="index.html" class="test fancybox" data-fancybox-type="iframe"><img src="{{ asset('bundles/adappso/images/test.png') }}" alt="Testez-vous sur ce contenu !"></a>
    </aside>
</section>
</section>

{% endblock %}